@page
@model StoreWebCore.Pages.Shop.CartModel
@{
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <h3>
        Cart
    </h3>

    <form asp-page="cart" asp-page-handler="update" method="post">
        <table border="1">
            <tr>
                <th>Action</th>
                <th>Id</th>
                <th>Name</th>
                <th>Photo</th>
                <th>Price</th>
                <th>Quantity <input type="submit" value="update" /></th>

                <th>Sub total</th>
            </tr>
            @foreach (var item in Model.cart)
            {
                <tr align="center">

                    <td>
                        <a asp-page="cart" asp-page-handler="delete" asp-route-id="@item.Product.Id">X</a>
                    </td>
                    <td>@item.Product.Id</td>
                    <td>@item.Product.Name</td>
                    <td><img stc="~/images/@item.Product.Photo" width="120" height="100" /></td>
                    <td>$@item.Product.Price</td>
                    <td><input type="number" name="quantities" value="@item.Quantity" min="1" style="width:50px" /></td>
                    <td>$@(@item.Product.Price* @item.Quantity)</td>
                    <td></td>

                </tr>
            }
        <tr>
            <td colspan="6" align="right" >Total</td>
            <td align="center">$@Model.Total</td>
        </tr>
        </table>

    </form>
    <a asp-page="ShoppingCar">Seguir Comprando</a>
</body>
</html>