@page
@model StoreWebCore.Pages.Shop.ShoppingCarModel
@{
}
    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title></title>
    </head>
    <body>
            <h3> Product List</h3>
            <table>
                <tr>
                    <th>id</th>
                    <th>Name</th>
                    <th>Photo</th>
                    <th>Price</th>
                    <th>Action</th>

                </tr>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                        <td><img src="~/images/@product.Photo" width="120" height="100" /></td>
                        <td>@product.Price</td>
                        <td>
                            <a asp-page="cart" asp-page-handler="BuyNow" asp-route-id="@product.Id"> buy Now</a>
                        </td>
                    </tr>
                    
                }
            </table>
    </body>
    </html>